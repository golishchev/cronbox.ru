# CronBox Environment Variables

# Database
POSTGRES_USER=cronbox
POSTGRES_PASSWORD=your-secure-password-here
POSTGRES_DB=cronbox
DATABASE_URL=postgresql+asyncpg://cronbox:your-secure-password-here@localhost:5432/cronbox

# Redis
REDIS_URL=redis://localhost:6379/0
# Redis password (required in production)
REDIS_PASSWORD=your-secure-redis-password-here

# Security
SECRET_KEY=your-super-secret-key-change-in-production
JWT_SECRET=your-jwt-secret-key-change-in-production

# YooKassa Payment
YOOKASSA_SHOP_ID=
YOOKASSA_SECRET_KEY=

# Telegram Bot
TELEGRAM_BOT_TOKEN=

# Email - Postal (primary, recommended)
POSTAL_API_URL=https://postal.example.com
POSTAL_API_KEY=
POSTAL_SERVER_KEY=
POSTAL_WEBHOOK_SECRET=
USE_POSTAL=true

# Email - SMTP (fallback)
SMTP_HOST=smtp.yandex.ru
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
SMTP_USE_TLS=true
EMAIL_FROM=CronBox <noreply@cronbox.ru>

# CORS
CORS_ORIGINS=["http://localhost:3000", "http://localhost:5173"]

# Traefik
ACME_EMAIL=admin@cronbox.ru
# Generate with: htpasswd -nB admin (copy full output including "admin:")
# Example: admin:$2y$05$xxxxx
TRAEFIK_DASHBOARD_AUTH=admin:$$2y$$05$$your-bcrypt-hash-here

# Postal (for production)
POSTAL_MARIADB_ROOT_PASSWORD=your-mariadb-root-password
POSTAL_RABBITMQ_PASSWORD=your-rabbitmq-password
POSTAL_SECRET_KEY=your-postal-secret-key-64-chars
POSTAL_ADMIN_EMAIL=admin@cronbox.ru
POSTAL_ADMIN_PASSWORD=your-postal-admin-password

# Grafana
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=your-grafana-password

# Debug
DEBUG=false
