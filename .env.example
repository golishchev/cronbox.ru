# CronBox Environment Variables

# Database
POSTGRES_USER=cronbox
POSTGRES_PASSWORD=your-secure-password-here
POSTGRES_DB=cronbox
DATABASE_URL=postgresql+asyncpg://cronbox:your-secure-password-here@localhost:5432/cronbox

# Redis
REDIS_URL=redis://localhost:6379/0
# Redis password (required in production)
REDIS_PASSWORD=your-secure-redis-password-here

# Security
SECRET_KEY=your-super-secret-key-change-in-production
JWT_SECRET=your-jwt-secret-key-change-in-production

# YooKassa Payment
YOOKASSA_SHOP_ID=
YOOKASSA_SECRET_KEY=

# Telegram Bot
TELEGRAM_BOT_TOKEN=

# Email - Postal (primary, recommended)
POSTAL_API_URL=https://postal.example.com
POSTAL_API_KEY=
POSTAL_SERVER_KEY=
POSTAL_WEBHOOK_SECRET=
USE_POSTAL=true

# Email - SMTP (fallback)
SMTP_HOST=smtp.yandex.ru
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
SMTP_USE_TLS=true
EMAIL_FROM=CronBox <noreply@cronbox.ru>

# CORS
CORS_ORIGINS=["http://localhost:3000", "http://localhost:5173"]

# Traefik
ACME_EMAIL=admin@cronbox.ru
# Generate hash with: htpasswd -nB admin
TRAEFIK_DASHBOARD_USER=admin
TRAEFIK_DASHBOARD_PASSWORD_HASH=$2y$05$...hashed-password...

# Grafana
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=your-grafana-password

# Debug
DEBUG=false
