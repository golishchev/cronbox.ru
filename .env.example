# ===========================================
# CronBox Environment Variables - MASTER FILE
# ===========================================
#
# Copy this file to .env and fill in your values
# This is the ONLY .env file you need to configure for the entire project!
#

# ===================
# Application
# ===================
DEBUG=false
ENVIRONMENT=development  # development, staging, production
SECRET_KEY=your-super-secret-key-change-in-production
JWT_SECRET=your-jwt-secret-key-change-in-production

# ===================
# Database (PostgreSQL)
# ===================
POSTGRES_USER=cronbox
POSTGRES_PASSWORD=cronbox
POSTGRES_DB=cronbox

# For local development with docker-compose.yml (port 5433->5432)
DATABASE_URL=postgresql+asyncpg://cronbox:cronbox@localhost:5433/cronbox

# ===================
# Redis
# ===================
REDIS_PASSWORD=your-secure-redis-password-here
REDIS_URL=redis://localhost:6379/0

# ===================
# Payments (YooKassa)
# ===================
YOOKASSA_SHOP_ID=
YOOKASSA_SECRET_KEY=

# ===================
# Messengers
# ===================
TELEGRAM_BOT_TOKEN=
ADMIN_TELEGRAM_ID=

# ===================
# Email (SMTP)
# ===================
SMTP_HOST=smtp.yandex.ru
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
SMTP_USE_TLS=true
EMAIL_FROM=CronBox <noreply@cronbox.ru>

# ===================
# URLs & CORS
# ===================
CORS_ORIGINS=["http://localhost:3000", "http://localhost:5173"]
FRONTEND_URL=https://cronbox.ru
API_URL=http://localhost:8000

# ===================
# Sentry (Error Tracking)
# ===================
SENTRY_DSN=
VITE_SENTRY_DSN=
VITE_API_URL=http://localhost:8000/v1

# ===================
# Infrastructure (Production)
# ===================
ACME_EMAIL=admin@cronbox.ru
TRAEFIK_DASHBOARD_AUTH=

GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=
