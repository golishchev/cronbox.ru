# Application
DEBUG=false
SECRET_KEY=your-super-secret-key-change-in-production
ENVIRONMENT=development  # development, staging, production

# Database (for local dev with `make infra`)
DATABASE_URL=postgresql+asyncpg://cronbox:cronbox@localhost:5433/cronbox

# Redis (for local dev with `make infra`)
REDIS_URL=redis://localhost:6379/0

# JWT
JWT_SECRET=your-jwt-secret-key-change-in-production
ACCESS_TOKEN_EXPIRE_MINUTES=15
REFRESH_TOKEN_EXPIRE_DAYS=30

# Security: Rate Limiting for Auth Endpoints (requests per minute)
AUTH_RATE_LIMIT_LOGIN=5
AUTH_RATE_LIMIT_REGISTER=3
AUTH_RATE_LIMIT_PASSWORD_RESET=3

# Security: Account Lockout
MAX_FAILED_LOGIN_ATTEMPTS=5
ACCOUNT_LOCKOUT_MINUTES=15

# YooKassa (Payments)
YOOKASSA_SHOP_ID=
YOOKASSA_SECRET_KEY=
YOOKASSA_WEBHOOK_SECRET=  # For webhook signature verification

# Telegram Bot
TELEGRAM_BOT_TOKEN=

# Resend (Email)
RESEND_API_KEY=

# CORS
CORS_ORIGINS=["http://localhost:3000", "http://localhost:5173"]

# Frontend URL (for email links like verification, password reset)
FRONTEND_URL=http://localhost:3000
