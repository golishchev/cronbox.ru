# CronBox Backup Configuration
# Copy to /opt/cronbox/scripts/backup.env and set your values

# CronBox API URL (default: https://api.cronbox.ru)
export API_URL=https://api.cronbox.ru

# Process Monitor tokens from CronBox UI
# Create a Process Monitor named "Daily Backup" with:
# - Schedule: cron "0 3 * * *" (3:00 AM daily)
# - Start grace period: 300 seconds (5 minutes)
# - End timeout: 3600 seconds (1 hour)
export BACKUP_START_TOKEN=your-start-token-here
export BACKUP_END_TOKEN=your-end-token-here

# Backup settings
export BACKUP_DIR=/opt/cronbox/backups
export RETENTION_DAYS=7

# Docker container/volume names
export POSTGRES_CONTAINER=cronbox-postgres
export UPLOADS_VOLUME=cronbox_uploads_data

# Database credentials (same as in .env)
export POSTGRES_USER=cronbox
export POSTGRES_PASSWORD=your-postgres-password
export POSTGRES_DB=cronbox
